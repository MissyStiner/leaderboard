<div class="post card">
    <div class="card-header">
        <h2>Create a Post</h2>
    </div>
    <form id="add-post-form" class="card-body">
        <label class="form-label" for="post-title">Title</label>
        <input type="text" name="post-title" class="form-input" placeholder="Insert title here" required/>
        <label class="form-label" for="post-day">Day</label>
      <input class="form-input" name="post-day" placeholder="Insert day here" required/>
      <label class="form-label" for="post-hour">Hour</label>
      <input class="form-input" name="post-hour" placeholder="Insert hour here" required/>
        <button type="submit" class="btn mb-none">Create Post</button>
    </form>
</div>

<script src="/javascript/add.js"></script>